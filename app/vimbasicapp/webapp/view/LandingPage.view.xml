<mvc:View controllerName="vimbasicapp.controller.LandingPage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page title="{i18n>title}">
        <content>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
                header="Invoices for Review"
                press="showInReview">
                <TileContent unit="3 Invoices for Review">
                    <ImageContent src="sap-icon://home-share" />
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
                header="Invoices for Approval"
                press="showPendingApproval">
                <TileContent unit="2 Invoices for Approval">
                    <ImageContent src="sap-icon://accounting-document-verification" />
                </TileContent>
            </GenericTile>
        </content>
    </Page>
</mvc:View>